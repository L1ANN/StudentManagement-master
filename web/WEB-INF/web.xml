<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--Filter映射-->
    <!--统一全站字符编码-->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>charset</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--登录验证，未登录用户访问其他页面统一定位到登录页面-->
    <filter>
        <filter-name>AutoFilter_jsp</filter-name>
        <filter-class>web.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AutoFilter_jsp</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AutoFilter_servlet</filter-name>
        <filter-class>web.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AutoFilter_servlet</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

    <!--Servlet映射-->
    <!--登录，注销有关的Servlet-->
    <!--LoginServlet的映射 -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>web.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <!--LogoutServlet的映射-->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>web.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>
    <!--LoginUIServlet的映射-->
    <servlet>
        <servlet-name>LoginUIServlet</servlet-name>
        <servlet-class>web.UI.LoginUIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginUIServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>


    <!--与新生页面有关的Servlet-->
    <!--查询新生列表以及模糊搜索列表-->
    <servlet>
        <servlet-name>SelectStudent</servlet-name>
        <servlet-class>web.controller.student.SelectStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectStudent</servlet-name>
        <url-pattern>/SelectStudent.do</url-pattern>
    </servlet-mapping>
    <!--查询新生详细信息-->
    <servlet>
        <servlet-name>DetailStudent</servlet-name>
        <servlet-class>web.controller.student.DetailStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailStudent</servlet-name>
        <url-pattern>/DetailStudent.do</url-pattern>
    </servlet-mapping>
    <!--修改新生信息-->
    <servlet>
        <servlet-name>UpdateStudent</servlet-name>
        <servlet-class>web.controller.student.UpdateStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateStudent</servlet-name>
        <url-pattern>/UpdateStudent.do</url-pattern>
    </servlet-mapping>
    <!--删除新生信息-->
    <servlet>
        <servlet-name>DeleteStudent</servlet-name>
        <servlet-class>web.controller.student.DeleteStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteStudent</servlet-name>
        <url-pattern>/DeleteStudent.do</url-pattern>
    </servlet-mapping>
    <!--查询新生缴费列表-->
    <servlet>
        <servlet-name>SelectTuition</servlet-name>
        <servlet-class>web.controller.student.SelectTuitionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectTuition</servlet-name>
        <url-pattern>/SelectTuition.do</url-pattern>
    </servlet-mapping>
    <!--更新新生专业-->
    <servlet>
        <servlet-name>UpdateMajor</servlet-name>
        <servlet-class>web.controller.student.UpdateMajorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateMajor</servlet-name>
        <url-pattern>/UpdateMajor.do</url-pattern>
    </servlet-mapping>
    <!--更新新生班级-->
    <servlet>
        <servlet-name>UpdateClass</servlet-name>
        <servlet-class>web.controller.student.UpdateClassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateClass</servlet-name>
        <url-pattern>/UpdateClass.do</url-pattern>
    </servlet-mapping>
    <!--上传新生EXCEL文档并解析存入数据库-->
    <servlet>
        <servlet-name>UploadExcel</servlet-name>
        <servlet-class>web.controller.upload.UploadExcelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadExcel</servlet-name>
        <url-pattern>/UploadExcel.do</url-pattern>
    </servlet-mapping>
    <!--跳转到新生页面-->
    <servlet>
        <servlet-name>JumpUpload</servlet-name>
        <servlet-class>web.UI.JumpUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JumpUpload</servlet-name>
        <url-pattern>/JumpUpload.do</url-pattern>
    </servlet-mapping>

    <!--与专业页面有关的Servlet-->
    <!--根据系别查找专业-->
    <servlet>
        <servlet-name>SelectMajor</servlet-name>
        <servlet-class>web.controller.major.SelectMajorAJAXServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectMajor</servlet-name>
        <url-pattern>/SelectMajor.do</url-pattern>
    </servlet-mapping>

    <!--与宿舍页面有关的Servlet-->
    <!--查询宿舍列表以及模糊搜索列表-->
    <servlet>
        <servlet-name>SelectApartment</servlet-name>
        <servlet-class>web.controller.apartment.SelectApartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectApartment</servlet-name>
        <url-pattern>/SelectApartment.do</url-pattern>
    </servlet-mapping>
    <!--查询宿舍详情-->
    <servlet>
        <servlet-name>DetailApartment</servlet-name>
        <servlet-class>web.controller.apartment.DetailApartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailApartment</servlet-name>
        <url-pattern>/DetailApartment.do</url-pattern>
    </servlet-mapping>
    <!--删除/添加宿舍人员-->
    <servlet>
        <servlet-name>De_AdApartment</servlet-name>
        <servlet-class>web.controller.apartment.De_AdApartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>De_AdApartment</servlet-name>
        <url-pattern>/De_AdApartment.do</url-pattern>
    </servlet-mapping>
    <!--查询无宿舍人员-->
    <servlet>
        <servlet-name>SelectNoApStudent</servlet-name>
        <servlet-class>web.controller.apartment.SelectNoApStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectNoApStudent</servlet-name>
        <url-pattern>/SelectNoApStudent.do</url-pattern>
    </servlet-mapping>
    <!--添加宿舍人员-->
    <servlet>
        <servlet-name>AddStudent</servlet-name>
        <servlet-class>web.controller.apartment.AddStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddStudent</servlet-name>
        <url-pattern>/AddStudent.do</url-pattern>
    </servlet-mapping>

    <!--与班级页面有关的Servlet-->
    <!--查询班级列表以及模糊搜索列表-->
    <servlet>
        <servlet-name>SelectClass</servlet-name>
        <servlet-class>web.controller.classes.SelectClassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectClass</servlet-name>
        <url-pattern>/SelectClass.do</url-pattern>
    </servlet-mapping>
    <!--查询班级详情-->
    <servlet>
        <servlet-name>DetailClass</servlet-name>
        <servlet-class>web.controller.classes.DetailClassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailClass</servlet-name>
        <url-pattern>/DetailClass.do</url-pattern>
    </servlet-mapping>
    <!--删除/添加班级人员-->
    <servlet>
        <servlet-name>De_AdClass</servlet-name>
        <servlet-class>web.controller.classes.De_AdClassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>De_AdClass</servlet-name>
        <url-pattern>/De_AdClass.do</url-pattern>
    </servlet-mapping>
    <!--查询无班级人员-->
    <servlet>
        <servlet-name>SelectNoClStudent</servlet-name>
        <servlet-class>web.controller.classes.SelectNoClStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectNoClStudent</servlet-name>
        <url-pattern>/SelectNoClStudent.do</url-pattern>
    </servlet-mapping>
    <!--添加宿舍人员-->
    <servlet>
        <servlet-name>AddClStudent</servlet-name>
        <servlet-class>web.controller.classes.AddClStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddClStudent</servlet-name>
        <url-pattern>/AddClStudent.do</url-pattern>
    </servlet-mapping>

    <!--与成绩页面有关的Servlet-->
    <!--跳转到成绩页面-->
    <servlet>
        <servlet-name>JumpRecord</servlet-name>
        <servlet-class>web.UI.JumpRecordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JumpRecord</servlet-name>
        <url-pattern>/JumpRecord.do</url-pattern>
    </servlet-mapping>
    <!--AJAX查询所有系别-->
    <servlet>
        <servlet-name>SelectDepartmentAJAX</servlet-name>
        <servlet-class>web.controller.department.SelectDepartmentAJAXServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectDepartmentAJAX</servlet-name>
        <url-pattern>/SelectDepartmentAJAX.do</url-pattern>
    </servlet-mapping>
    <!--AJAX查询指定专业的班级-->
    <servlet>
        <servlet-name>SelectClassAJAX</servlet-name>
        <servlet-class>web.controller.classes.SelectClassAJAXServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectClassAJAX</servlet-name>
        <url-pattern>/SelectClassAJAX.do</url-pattern>
    </servlet-mapping>
    <!--查询成绩列表以及搜索成绩列表-->
    <servlet>
        <servlet-name>SelectRecord</servlet-name>
        <servlet-class>web.controller.record.SelectRecordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectRecord</servlet-name>
        <url-pattern>/SelectRecord.do</url-pattern>
    </servlet-mapping>

    <!--与管理员页面有关的Servlet-->
    <!--跳转用户管理页面-->
    <servlet>
        <servlet-name>JumpAdmin</servlet-name>
        <servlet-class>web.UI.JumpAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JumpAdmin</servlet-name>
        <url-pattern>/JumpAdmin.do</url-pattern>
    </servlet-mapping>
    <!--修改密码-->
    <servlet>
        <servlet-name>ChangePass</servlet-name>
        <servlet-class>web.controller.admin.ChangePassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePass</servlet-name>
        <url-pattern>/ChangePass.do</url-pattern>
    </servlet-mapping>
</web-app>