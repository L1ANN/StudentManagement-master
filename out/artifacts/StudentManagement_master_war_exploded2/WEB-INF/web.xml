<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--登录，注销有关的Servlet>
    <!--LoginServlet的映射 -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>web.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet.do</url-pattern>
    </servlet-mapping>

    <!--LogoutServlet的映射-->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>web.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>

    <!--LoginUIServlet的映射-->
    <servlet>
        <servlet-name>LoginUIServlet</servlet-name>
        <servlet-class>web.UI.LoginUIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginUIServlet</servlet-name>
        <url-pattern>/Login.do</url-pattern>
    </servlet-mapping>


    <!--与新生有关的Servlet-->
    <servlet>
        <servlet-name>SelectStudentServlet</servlet-name>
        <servlet-class>web.controller.student.SelectStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectStudentServlet</servlet-name>
        <url-pattern>/SelectStudent.do</url-pattern>
    </servlet-mapping>
</web-app>